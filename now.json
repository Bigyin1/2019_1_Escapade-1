{
    "name": "escapade",
    "version": 2,
    "builds": [
        {
            "src": "server/index.js",
            "use": "@now/node-server"
        },
        {
            "src": "static/main.js",
            "use": "@now/static"
        },
        {
            "src": "**/*.js",
            "use": "@now/node"
        },
        {
            "src": "**/*.html",
            "use": "@now/html-minifier"
        },
        {
            "src": "**/*.css",
            "use": "@now/html-minifier"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "^(/*)$",
            "dest": "/server/index.js"
        }
    ]
}