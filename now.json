{
    "name": "escapade",
    "version": 2,
    "builds": [
        {
            "src": "server/index.js",
            "use": "@now/node-server"
        },
        {
            "src": "static/main.js",
            "use": "@now/static"
        },
        {
            "src": "**/*.html",
            "use": "@now/html-minifier"
        },
        {
            "src": "**/*.css",
            "use": "@now/html-minifier"
        }
    ],
    "routes": [
        {
            "src": "/static/main.js",
            "dest": "/static/main.js"
        },
        {
            "src": "/static/css/(.*)",
            "dest": "/static/css/$1"
        },
        {
            "src": "/connect",
            "dest": "/server/index.js"
        },
        {
            "src": "^/(.*)",
            "dest": "/server/index.js"
        }
    ]
}