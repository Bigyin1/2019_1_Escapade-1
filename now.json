{
    "name": "escapade",
    "version": 2,
    "builds": [
        {
            "src": "**/*.js",
            "use": "@now/node"
        },
        {
            "src": "**/*.html",
            "use": "@now/html-minifier"
        },
        {
            "src": "**/*.css",
            "use": "@now/html-minifier"
        },
        {
            "src": "public/*",
            "use": "@now/static"
        },
        {
            "src": "static/*",
            "use": "@now/static"
        }
    ],
    "routes": [
        {
            "src": "^/(.*)",
            "dest": "/server/index.js"
        }
    ]
}