extends ../Header.pug

block content
  section(data-section-name='profile')
    .profile 
      .profile__wrapper
        .profile__main
          .profile__avatar
            - var url = data.avatar          
          .profile__info
            form.signup__form(novalidate='novalidate')
              .profile__row
                .profile__name Login
                input.input.signup__input.text-h2#login(type='login', name='login',  value=data.name)
                .warning.signup__warning.hidden.js-warning-login
              .profile__row
                .profile__name Email
                input.input.signup__input.text-h2#email(type='email', name='email',  value=data.email)
                .warning.signup__warning.hidden.js-warning-email
              .profile__row
                .profile__name Password
                input.input.signup__input.text-h2#password(type='password', name='password', placeholder='******', autocomplete="new-password")
                .warning.signup__warning.hidden.js-warning-password
              .profile__row
                .profile__name Repeat password
                input.input.signup__input.text-h2#password-repeat(type='password', name='password-repeat',  placeholder='******', autocomplete="new-password")
                .warning.signup__warning.hidden.js-warning-repassword
              .profile__row
                input.change__submit.button(id="submit_changes", type='submit', name='submit', value='Изменить данные')
            br
            hr
            br
            .profile__row
              .profile__name Games Played
              .profile__value #{data.played}
            .profile__row
              .hrefBackToMenu 
                a.back(data-href='menu', href='menu' ) Назад в меню